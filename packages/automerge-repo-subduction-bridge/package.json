{
  "name": "@automerge/automerge-repo-subduction-bridge",
  "version": "2.6.0-subduction.0",
  "description": "Bridges to use automerge-repo storage and network adapters with Subduction",
  "repository": "https://github.com/automerge/automerge-repo/tree/subductionjs/packages/automerge-repo-subduction-bridge",
  "keywords": [
    "automerge",
    "crdt",
    "local-first",
    "subduction",
    "sync"
  ],
  "author": "Brooklyn Zelenka <hello@brooklynzelenka.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "npm-watch build",
    "test": "vitest"
  },
  "dependencies": {
    "@automerge/automerge-repo": "workspace:*",
    "@automerge/automerge-subduction": "0.2.2-alpha.0",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "@automerge/automerge-repo-network-broadcastchannel": "workspace:*",
    "vitest": "^4.0.15"
  },
  "watch": {
    "build": {
      "patterns": "./src/**/*",
      "extensions": [
        ".ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public",
    "tag": "subduction"
  }
