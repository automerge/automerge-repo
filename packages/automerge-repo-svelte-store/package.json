{
  "name": "@automerge/automerge-repo-svelte-store",
  "version": "2.0.0",
  "description": "A Svelte store containing your automerge documents",
  "repository": "https://github.com/automerge/automerge-repo/tree/master/packages/automerge-repo-svelte-store",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "svelte-package",
    "watch": "svelte-package --watch"
  },
  "peerDependencies": {
    "svelte": "^3.0.0 || ^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "@automerge/automerge-repo": "workspace:*"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.3.11",
    "typescript": "^5.0.0"
  },
  "watch": {
    "build": {
      "patterns": "./src/**/*",
      "extensions": [
        ".ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
