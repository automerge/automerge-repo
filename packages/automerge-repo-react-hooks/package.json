{
  "name": "@automerge/automerge-repo-react-hooks",
  "version": "2.0.1",
  "description": "Hooks to access an Automerge Repo from your react app.",
  "repository": "https://github.com/automerge/automerge-repo/tree/master/packages/automerge-repo-react-hooks",
  "author": "Peter van Hardenberg <pvh@pvh.ca>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "test": "vitest run",
    "watch": "npm-watch build",
    "visualize": "VISUALIZE=true vite build"
  },
  "dependencies": {
    "@automerge/automerge": "^2.2.8",
    "@automerge/automerge-repo": "workspace:*",
    "eventemitter3": "^5.0.1",
    "react-usestateref": "^1.0.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.0.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jsdom": "^22.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^5.0.0",
    "rollup-plugin-visualizer": "^5.9.3",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^3.9.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "watch": {
    "build": {
      "patterns": "./src/**/*",
      "extensions": [
        ".ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
