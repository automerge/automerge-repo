{
  "name": "automerge-repo",
  "version": "0.0.44",
  "description": "A repository object to manage a collection of automerge documents",
  "repository": "https://github.com/pvh/automerge-repo",
  "author": "Peter van Hardenberg <pvh@pvh.ca>",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "npm-watch build",
    "test:coverage": "c8 --reporter=lcov --reporter=html --reporter=text yarn test",
    "test": "mocha --no-warnings --experimental-specifier-resolution=node",
    "test:watch": "npm-watch test",
    "test:log": "cross-env DEBUG='ar:*' yarn test",
    "fuzz": "ts-node fuzz/fuzz.js"
  },
  "browser": {
    "crypto": false
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "http-server": "^14.1.0"
  },
  "peerDependencies": {
    "@automerge/automerge": "^2.0.2-alpha.1"
  },
  "dependencies": {
    "cbor-x": "^1.3.0",
    "debug": "^4.3.4",
    "eventemitter3": "^4.0.7",
    "tiny-typed-emitter": "^2.1.0",
    "ts-mixer": "^6.0.2",
    "ts-node": "^10.9.1",
    "uuid": "^8.3.2"
  },
  "watch": {
    "build": {
      "patterns": "./src/**/*",
      "extensions": [
        ".ts"
      ]
    },
    "test": {
      "quiet": true,
      "patterns": [
        "./src/**/*",
        "./test/**/*"
      ],
      "extensions": [
        ".ts"
      ]
    }
  }
}
