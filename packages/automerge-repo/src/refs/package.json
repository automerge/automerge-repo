{
  "name": "@inkandswitch/patchwork-refs",
  "type": "module",
  "version": "0.1.2",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w --preserveWatchOutput",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "push": "pnpm build && pushwork sync"
