{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}
