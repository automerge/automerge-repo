{
  "name": "@automerge/automerge-repo-monorepo",
  "version": "2.5.0-alpha.2",
  "description": "Automerge Repo monorepo",
  "main": "packages/automerge-repo/dist/index.js",
  "repository": "https://github.com/automerge/automerge-repo",
  "author": "Peter van Hardenberg <pvh@pvh.ca>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev:demo": "pnpm -F @automerge/automerge-repo-demo-todo dev",
    "dev:svelte-demo": "pnpm -F @automerge/automerge-repo-demo-counter-svelte dev",
    "dev": "run-p watch start:syncserver dev:demo",
    "pub": "pnpm publish -r",
    "start:syncserver": "cross-env DEBUG='WebsocketServer' pnpm -F @automerge/example-sync-server start",
    "preinstall": "npx only-allow pnpm",
    "repocheck": "manypkg check",
    "format": "prettier --write . | dev-null",
    "lint": "prettier --check . && eslint .",
    "test": "vitest",
    "test:log": "cross-env DEBUG='automerge-repo:*' vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --coverage --ui",
    "watch": "pnpm run --parallel --stream -r watch "
  },
  "engines": {
    "node": ">=20.0 <22.0.0"
  },
  "packageManager": "pnpm@9.7.0",
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@automerge/automerge": "^3.1.2",
    "@automerge/sedimentree_automerge": "file:../subduction/sedimentree_automerge_wasm",
    "@automerge/subduction": "file:../subduction/subduction_wasm",
    "@manypkg/cli": "^0.21.4",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.19.23",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^7.14.0",
    "cross-env": "^7.0.3",
    "dev-null-cli": "^2.0.0",
    "eslint": "^9.38.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.15.0",
    "lerna": "^8.2.4",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "portfinder": "^1.0.38",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  }
}
